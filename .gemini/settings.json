

{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "sqlite": {
      "command": "npx",
      "args": ["mcp-sqlite-server", "${SQLITE_DB}"]
    },
    "openapi": {
      "command": "/Users/olahesselroth/.mcp/mcp-openapi-server/bin/mcp-server.js",
      "args": [
        "--openapi-spec", "${OPENAPI_SPEC}",
        "--api-base-url", "https://petstore3.swagger.io/api/v3"
      ]
    },
    "chrome-mcp": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://127.0.0.1:12306/mcp"]
    }
  }
}
